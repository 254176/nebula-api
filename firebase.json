{
  "hosting": {
    "site": "comet-data-service",
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "run": {
          "serviceId": "comet-data-service-demo", 
          "region": "us-central1"
        }
      }
    ]
  }
}